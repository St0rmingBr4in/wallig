choice
	prompt "Baord"
	default BOARD_CUSTOM
   
config BOARD_CUSTOM
   bool "CUSTOM"
 
config LCD_STM32
   bool "STM32 LCD baord"
	help
	  STM32 arch

config SIMU_LINUX
   bool "Linux on PC"
	help
	  simulation on desktop linux
endchoice 

menu "Detailled configuration"
choice
	prompt "ARCH"
	default ARCH_STM32 if BOARD_CUSTOM || LCD_STM32
   default ARCH_LINUX if SIMU_LINUX
  
 config ARCH_STM32
      bool "STM32 arch"
      
 config ARCH_LINUX
      bool "LINUX arch, simu"
      
endchoice  
if ARCH_STM32
source System/ARCH_STM32/Wconfig
endif



endmenu



