menu "choose CPU"
   config STM32F102
      bool STM32F102

   config STM32F103RBT6
 	select SUB_STM32F1XX
      bool STM32F103RBT6

   config STM32F207ZGT6
 	select SUB_STM32F2XX
      bool STM32F207ZGT6

   config STM32F103ZET6
 	select SUB_STM32F1XX
      bool STM32F103ZET6

endmenu

menu "sub arch"
  config SUB_STM32F1XX
	bool SUB_STM32F1XX
  config SUB_STM32F2XX
	bool SUB_STM32F2XX
endmenu

menu "memory"
config INTERNAL_RAM
   int "Internal RAM size in KB"
   default 128 if STM32F207ZGT6
   default 32 if STM32F103RBT6
   
config INTERNAL_ROM
   int "Internal Flash size in KB"
   default 1024 if STM32F207ZGT6
   default 64 if STM32F103RBT6

menuconfig EXTERNAL_RAM
   bool "External SRAM on board"
   default n
   
config EXTERNAL_RAM_SIZE
   depends on EXTERNAL_RAM
   int "external SRAM size in kb"
   default 1024

menuconfig EXTERNAL_ROM
   bool "External NOR on board"
   default n
   
config EXTERNAL_RAM_SIZE
   depends on EXTERNAL_ROM
   int "external ROM size in kb"
   default 1024
   
endmenu

menu "arch lib"
config LIB_SOURCE_ARCHIVE_NAME
   default "stm32f2xx_stdperiph_lib.zip" if STM32F207ZGT6 
   default "stm32f10x_stdperiph_lib.zip" if STM32F103ZET6 ||STM32F103RBT6 
	string "Archive name"

config LIB_SOURCE_PATH
   string "STM 32 source address"
   depends on ARCH_STM32
   default "http://www.st.com/internet/com/SOFTWARE_RESOURCES/SW_COMPONENT/FIRMWARE/"
endmenu
